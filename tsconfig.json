{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "outDir": "dist"
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["bin/**/*.ts", "lib/**/*.ts"]
}
